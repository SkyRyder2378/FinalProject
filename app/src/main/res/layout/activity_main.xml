<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:orientation="vertical">
    <ImageView
        android:layout_margin="5dp"
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="200dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#e8f6f3"
        android:id="@+id/nasa"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp" >
        <TextView
            android:text="@string/nasa_mars_rover_photos"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/kitten"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#e8f6f3"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/place_kitten_placeholder_images"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#e8f6f3"
        android:id="@+id/newYork"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp" >
        <TextView
            android:text="@string/new_york_times"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#e8f6f3"
        android:id="@+id/weather"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp" >
        <TextView
            android:text="@string/weatherstack"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>